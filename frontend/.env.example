# Environment Variables for CleanCast AI Frontend
# Copy this file to .env.local and fill in your actual values

# Backend API URL
BACKEND_URL=https://your-backend-url.com

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Vercel Deployment
VERCEL_URL=https://your-app.vercel.app

# Production payment page
RAZORPAY_PAYMENT_PAGE=https://rzp.io/rzp/your-payment-page

# Application Configuration
NODE_ENV=production
PORT=3000

# Backend API URL (switch between local and deployed)
# For local development:
# BACKEND_URL=http://localhost:5000
# For production (deployed backend):
BACKEND_URL=https://ai-profanity-filter.onrender.com
