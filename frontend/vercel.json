{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(css|js|images)/(.*)",
      "dest": "/public/$1/$2",
      "headers": {
        "cache-control": "s-maxage=31536000"
      }
    },
    {
      "src": "/processed/(.*)",
      "dest": "/public/processed/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "BACKEND_URL": "https://ai-profanity-filter.onrender.com"
  }
}